<?xml version="1.0" encoding="UTF-8"?>
<project name="parallel-ant" default="dist" basedir=".">
    
    <property name="src.dir" location="./src"/>
    <property name="src.java.dir" location="${src.dir}/java"/>
    <property name="src.test.dir" location="${src.dir}/test"/>
    
    <property name="lib.dir" location="./lib"/>
    <property name="etc.dir" location="./etc"/>
        
    <property name="build.dir" location="./build"/>
    <property name="classes.dir" location="${build.dir}/classes"/>
    <property name="classes.java.dir" location="${classes.dir}/java"/>
    <property name="classes.test.dir" location="${classes.dir}/test"/>
    
    <property name="dist.dir" location="${build.dir}"/>
    
    <path id="classpath">
        <pathelement path="${lib.dir}/apache-ant-1.7.0/ant-1.7.0.jar" />
    </path>
        
    <target name="clean">
        <delete dir="${build.dir}"/>
    </target>
        
    <target name="compile-src">
        <mkdir dir="${classes.java.dir}"/>
        <javac srcdir="${src.java.dir}" destdir="${classes.java.dir}">
            <classpath refid="classpath"/>
        </javac>
    </target>
    
    <target name="compile-test" depends="compile-src">
        <mkdir dir="${classes.test.dir}"/>
        <javac srcdir="${src.test.dir}" destdir="${classes.test.dir}">
            <classpath location="${classes.java.dir}"/>
            <classpath refid="classpath"/>
        </javac>
    </target>
    
    <target name="test" depends="compile-test">
    </target>

    <target name="jar" depends="compile-src">
        <mkdir dir="${dist.dir}"/>
        <jar basedir="${classes.java.dir}" destfile="${dist.dir}/parallel-ant.jar"/>
    </target>
    
    <target name="dist" depends="test, jar">
        <mkdir dir="${dist.dir}"/>
        <zip destfile="${dist.dir}/parallel-ant-dist.zip">
            <fileset file="${etc.dir}/pant"/>
            <fileset file="${dist.dir}/parallel-ant.jar"/>
        </zip>
    </target>
</project>
